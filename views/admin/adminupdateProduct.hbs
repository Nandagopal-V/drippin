                        <label for="" class="mb-1">Description</label>
                        <input type="text" value="{{user.Description}}"  name="Description" class="form-control mb-2">

                        <label for="" class="mb-1">Gender</label>
                        <select value="{{user.gender}}" id="gender" name="gender">
                         <option value="men">Men</option>
                         <option value="women">Women</option>
                        </select> <br>

                        <label for="" class="mb-1">Brand</label>
                        <select  id="brand" name="brand">
                         <option value="" selected>{{user.brand}}</option>
                         {{#each Brand}}
                         <option value="LP">{{this.Brandname}}</option>
                         {{/each}}
                         </select><br>

                         <label for="" class="mb-1">Size</label>
