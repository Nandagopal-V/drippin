                    <form action="/admin/updateProduct/{{user._id}}" method="POST" enctype="multipart/form-data">
                        <label for="" class="mb-1">Name</label>
                        <input value="{{user.Name}}" type="text" name="Name" class="form-control mb-2"> <label for="" class="mb-1" >Name</label>
